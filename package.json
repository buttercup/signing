{
  "name": "@buttercup/signing",
  "version": "0.0.0",
  "description": "Signing and verification tools for Buttercup archives",
  "main": "source/index.js",
  "scripts": {
    "format": "prettier --write '{source,test}/**/*.js'",
    "precommit": "lint-staged",
    "test": "npm run test:format",
    "test:format": "prettier-check '{source,test}/**/*.js'"
  },
  "lint-staged": {
    "{source,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup/signing.git"
  },
  "keywords": [
    "buttercup",
    "signing",
    "authentication",
    "verification"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buttercup/signing/issues"
  },
  "homepage": "https://github.com/buttercup/signing#readme",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "prettier-check": "^2.0.0"
  }
}
